{
  "name": "@apart-re/commons",
  "version": "1.0.5",
  "description": "Commons",
  "repository": {
    "type": "git",
    "url": "git://github.com/apart-re/monorepo.git",
    "directory": "packages/commons"
  },
  "license": "MIT",
  "author": "Oswaldo Tedesco <oswaldo.tedesco@gmail.com>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.cjs"
    },
    "./package.json": "./package.json",
    "./*": "./*"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "private": false,
  "scripts": {
    "build": "tsup",
    "clean": "npx rimraf ./dist",
    "lint": "bun biome lint .",
    "lint:fix": "bun biome lint --apply-unsafe .",
    "release": "pnpm publish --no-git-check",
    "release:canary": "bash ../../.github/canary.sh && node ../../scripts/build.js canary && pnpm publish --no-git-check",
    "start": "tsup --watch",
    "test": "vitest --passWithNoTests",
    "typecheck": "tsc -p ./tsconfig.json --noEmit --emitDeclarationOnly false"
  },
  "jest": {
    "preset": "@apart-re/jest-presets/node"
  },
  "packageManager": "pnpm@8.3.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.3.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  },
  "devDependencies": {
    "@apart-re/config-typescript": "workspace:*",
    "@apart-re/eslint-config": "workspace:*",
    "@apart-re/jest-presets": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/bluebird": "^3.5.42",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.14.10",
    "jest": "^29.7.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "objection": "^3.1.4",
    "objection-db-errors": "^1.1.2"
  }
}